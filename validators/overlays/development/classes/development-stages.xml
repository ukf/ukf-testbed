<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    default-lazy-init="true"
    xmlns:c="http://www.springframework.org/schema/c"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

    <!--
        development_stages

        This composite stage runs any checks under development.
    -->
    <bean id="development_stages" parent="mda.CompositeStage">
        <property name="stages">
            <util:list>
                <!-- Under-development checks go here. -->
                <ref bean="check_coco_v1"/>
            </util:list>
        </property>
    </bean>




    <bean id="check_coco_v1_support" parent="mda.XSLValidationStage"
          p:XSLResource="classpath:check_coco_v1_support.xsl"/>

    <bean id="check_coco_v1_ec" parent="mda.XSLValidationStage"
          p:XSLResource="classpath:check_coco_v1_ec.xsl"/>

    <bean id="check_coco_v1" parent="mda.CompositeStage">
        <property name="stages">
            <list>
                <ref bean="check_coco_v1_support"/>
                <ref bean="check_coco_v1_ec"/>
            </list>
        </property>
    </bean>

</beans>
